{
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "build": "pnpm clean && pnpm build:farc && pnpm build:create-farc && bun .scripts/postbuild.ts",
    "build:farc": "tsc --project ./tsconfig.build.json",
    "build:create-farc": "rimraf create-farc/_lib && tsc -p create-farc/tsconfig.build.json",
    "changeset": "changeset",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "clean": "rimraf src/_lib src/tsconfig.build.tsbuildinfo",
    "create-farc": "node --import tsx ./create-farc/bin.ts",
    "format": "biome format . --write",
    "lint": "biome check . --apply-unsafe",
    "postinstall": "pnpm build && pnpm preconstruct",
    "preconstruct": "bun .scripts/preconstruct.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/path-browserify": "latest",
    "@vitest/coverage-v8": "^1.2.2",
    "bun": "^1.0.28",
    "fast-glob": "^3.3.2",
    "hono": "^4",
    "picocolors": "^1.0.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typed-htmx": "^0.2.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "packageManager": "pnpm@8.15.3"
}
